<div class="page-wrapper displayCare">
  <div class="body no-padding sign-up">
    <div class='sign-up-banner'>
      <div class="overlay"></div>
      <div class="row">
        <div class="family-sign-up-box">
          <h4>What do you want in a caregiver?</h4>

          <%= form_tag(find_caretaker_step_index_path(id: @contract.id, next_step: :submit), method: :put) do %>

              <p>My caregiver is…</p>
              <div class="field no-width">
                <%= radio_button_tag :gender, '0', checked = true %>
                <%= label_tag 'Any gender' %>

                <%= radio_button_tag :gender, '1' %>
                <%= label_tag 'Male' %>


                <%= radio_button_tag :gender, '2' %>
                <%= label_tag 'Female' %>
              </div>

              <br><br>
              <p class="would-live">She would be living…</p>

              <div class="field no-width">
                <%= radio_button_tag 'job_type', '0' %>
                <%= label_tag 'In her own home (Live-out)', nil, class: 'live-out' %>


                <%= label_tag "In my #{@contract.patient_name}'s home (Live-in)" %>
                <%= radio_button_tag 'job_type', '1' %>
              </div>

              <div class="field no-width">
                <%= label_tag 'My caregiver speaks these languages…' %>
                <%#= select_tag :language, options_from_collection_for_select(@languages, 'id', 'name') %>
                <%= select_tag :language, nil, id: 'select-lng', placeholder: 'Type here to add one or more languages'%>
              </div>

              <div class="action">
                <%= submit_tag 'Next', class: 'btn blue' %>
              </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= javascript_tag do %>
    window.languages = <%= @languages.to_json.html_safe %>;
<% end %>

