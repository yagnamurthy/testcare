<div class="user-register-page container-large show-section-banner">

    <div class="section-banner">
        <div class="descr">
            <%= render partial: 'registration/tabs', locals: {active: "skills"} %>
            <h3>Great start <%= current_user.first_name %>, that was easy!</h3>
            <p>Now let's learn a little more about your caregiving experience to help you stand out to potential clients.</p>
        </div>
        <a href="#" class="btn-save blue">Let's Go!</a>
        <div class="overlay"></div>
        <div class="back-image"></div>
    </div>

    <script type="text/javascript">
        $(window).load(function() {
            setTimeout($('.section-banner').addClass('show-bg'), 1500);
        });
    </script>

    <div class="content">
        <div class="row">

            <%= render partial: 'registration/tabs', locals: {active: "skills"} %>

            <div class="reg-slider">
            <%= form_for current_user, url: update_caregiver_registration_path, method: 'patch', html: { autocomplete: 'off' } do |f| %>
                <div class="form-item work-experience required" data-tab="skills">
                    <%= f.label :work_experience, 'How long have you been a caregiver?', :class =>'title' %>
                    <div class="form-elements">
                        <%= f.number_field :work_experience %><span>/years</span>
                    </div>
                    <p class="error-msg" style="display:none;">Years of experience is required</p>
                    <%= hidden_field_tag 'route', skills_path %>
                </div>

                <div class="buttons">
                    <a href="#" class="back">< Go Back <span>to Previous Question</span></a>
                    <%= f.submit 'Save and Continue', class: 'btn-save' %>
                    <%= f.submit 'Save', class: 'btn' %>
                </div>
            <% end %>
            </div>
        </div>
    </div>
</div>
