<div class="user-register-page container-large">
    <div class="content">
        <div class="row">

            <%= render partial: 'registration/tabs', locals: {active: "about"} %>

            <div class="reg-slider">
            <%= form_for current_user, url: update_caregiver_registration_path, method: 'patch', html: { autocomplete: 'off' } do |f| %>

                <div class="form-item interests single-question" data-tab="about">

                    <label class="title">What are your hobbies and other interests outside of work?</label>
                    <span class="subtitle">(Your answer must be at least 50 characters)</span>

                    <div class="form-elements">
                        <div class="min-max-characters" data-min="50">
                            <%= f.text_area :question_3 %>
                            <div class="length"><span>0</span> characters</div>
                        </div>
                        <p class="tip">
                            CareSpotter Tip<br/>
                            Be descriptive, even if you have quirky interests. Your answer helps families better understand you personally to make a perfect match for their loved one.
                        </p>
                    </div>
                    <%= hidden_field_tag 'route', question_4_path %>
                </div>

                <div class="buttons">
                    <%= f.submit 'Save', class: 'btn' %>
                </div>
            <% end %>
            </div>
        </div>
    </div>
</div>
